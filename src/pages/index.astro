---
import Base from "@/layouts/Base.astro";
import Blogs from "@/components/Blog.astro";
import We_apply from "@/layouts/components/KeyFeatures.astro";
import Choise_us from "@/components/ChoiseSlider.astro";
import About_us from "@/components/Banner.astro";
import Cta from "@/layouts/partials/Cta.astro";
import Types from "@/components/Types.astro";
import Hero from "@/components/Hero.astro";
import { getEntryBySlug } from "astro:content";

// Obtener datos de la página
const homepage = await getEntryBySlug("homepage", "index");
const {
  hero,
  banner,
  about_us,
  choise_us,
  we_apply,
  beneficios,
  application_types,
  cta,
} = homepage.data;

const hero_data = {
  title: hero.title,
  image: hero.image,
  buttons: hero.buttons,
  content: hero.content,
  banner: banner, // Pasamos también los datos del banner
};

const beneficios_data = beneficios.items;
const types_data = application_types.items;
---

<Base>
  <Hero {...hero_data} />
  <!-- banner -->
  <About_us data={about_us} id="nosotros" />

  <!-- choise us -->
  <Choise_us data={choise_us}/>
  <!-- key features -->
  <We_apply key_features={we_apply} id="beneficios"/>

  <section class="section">
    <div class="container">
      <div class="row text-center mb-10">
        <h2 class="h2">{beneficios.head}</h2>
      </div>
      <Blogs posts={beneficios_data} />
    </div>
  </section>

  <section class="section">
    <div class="container px-4 mx-auto">
      <!-- Section title -->
      <div class="row text-center mb-10">
        <h2 class="h2">{application_types.head}</h2>
      </div>

      <!-- Grid for items -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"></div>
    </div>
  </section>

  <Types types_data={types_data} application_types={application_types} id="tipos_de_aplicacion"/>

  <!-- call to action -->
  <Cta cta_data={cta} id="contacto"/>
</Base>
