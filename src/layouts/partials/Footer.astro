---
import Logo from "@/components/Logo.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import { markdownify } from "@/lib/utils/textConverter";
import { Envelope, InstagramLogo, WhatsappLogo } from "@phosphor-icons/react";
const { footer } = menu;
const currentYear = new Date().getFullYear();
const {whatsapp} = config.site; 
const { copyright, location, email, phone, footer_description, instagram, telLink } =
  config.params;
---

<footer class="footer bg-[#F1F1F1]">
  <div class="container">
    <div
      class="row flex flex-wrap justify-between items-start space-around pb-10 pt-[52px]"
    >
      <div class="flex flex-col mt-12 md:w-1/3 lg:w-1/4">
        <Logo />
      </div>

      <div class="flex flex-col mt-12 md:w-2/3 lg:w-3/4">
        <div class="flex gap-8 justify-end">
          <div class="flex flex-col">
            <h6>Men√∫</h6>
            <ul>
              {
                footer.map((item, i) => (
                  <li class={footer.length - 1 === i ? "mb-0" : "mb-2"}>
                    <a
                      class="hover:text-primary hover:underline"
                      href={item.url}
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="flex flex-col ml-8">
            <h6>Contacto</h6>
            <ul>
              <li class="mb-4 flex items-center">
                <span set:html={markdownify(location)} />
              </li>

              <li class="mb-2 flex items-center">
                <Envelope className="mr-2" size={20} />
                <a class="hover:text-primary" target="_blank" href={`mailto:${email}`}>
                  {email}
                </a>
              </li>

              <li class="mb-2 flex items-center">
                <WhatsappLogo className="mr-2" size={20} />
                <a class="hover:text-primary hover:underline" target="_blank" href={`${whatsapp}`}>
                  {phone}
                </a>
              </li>

              <li class="mb-2 flex items-center">
                <InstagramLogo className="mr-2" size={20} />
                <a
                  class="hover:text-primary hover:underline"
                  href={`${instagram}`}
                  target="_blank"
                >
                  <span>Instagram</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container max-w-[1440px]">
    <div
      class="footer-copyright mx-auto border-t border-border pb-10 pt-7 text-left"
    >
    <p class="content text-text">
      {`${copyright} ${currentYear} Care4It. Todos los derechos reservados. `}      
    </p>
    </div>
  </div>
</footer>
