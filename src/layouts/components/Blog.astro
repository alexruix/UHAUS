---
const { posts } = Astro.props; // Recibe el prop `posts`
import VideoComponent from "@/layouts/function-components/VideoComponent";
import { Image } from "astro:assets";
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  {
    posts.map((post) => (
      <div
        class="bg-white p-4 rounded-sm border-gray-200 border"
        key={post.title}
      >
        <div>
          {post.image && (
            <div class="relative ">
              <Image
                class="w-full object-contain"
                alt={post.title}
                width={667}
                height={330}
                src={post.image}
              />
              
            </div>
          )}
          {post.video && (
            <VideoComponent
              client:load
              src={post.video.thumbnail}
              height={370}
              width={700}
              title={post.title}
              video_id={post.video.video_id}
              video_width="w-[700px]"
              video_height="h-[370px]"
            />
          )}
        </div>
        <div class="py-4">
          <h2 class="text-xl font-semibold mb-2">{post.title}</h2>
          <p class="text-gray-600">{post.description}</p>
        </div>
      </div>
    ))
  }
</div>
