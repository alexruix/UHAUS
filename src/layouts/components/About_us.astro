---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { data, id } = Astro.props;
const { title, image, content } = data;
---

<section class="section banner relative" id={id}>
  <div class="container px-4 mx-auto">
    <div class="row items-center flex flex-col lg:flex-row">
      <div class="w-full lg:w-1/2 mb-8 lg:mb-0">
        <Image
          class="w-full h-auto object-contain rounded"
          alt={title}
          src={image}
          width={603}
          height={396}
        />
      </div>

      <div class="w-full lg:w-1/2">
        <h2
          class="text-2xl lg:text-4xl font-bold leading-tight"
          set:html={markdownify(title)}
        />

        <p
          class="mt-4 text-base lg:text-lg leading-relaxed"
          set:html={markdownify(content)}
        />
      </div>
    </div>
  </div>
</section>
