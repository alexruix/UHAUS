---
// Props pasados desde index.astro
const { types_data, application_types, id } = Astro.props;
import { markdownify } from "@/lib/utils/textConverter";
import Image from "astro/components/Image.astro";
---

<section class="section" id={id}>
  <div class="container px-4 mx-auto">

    <div class="row text-center mb-10">
      <h2 class="h2">{application_types.head}</h2>
    </div>


    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {types_data.map((item: any, index: number) => (
        <div class="flex flex-col items-center p-6" key={index}>
          
          <div class="w-full mb-4">
            <Image
              class="w-full h-auto max-h-48 object-cover rounded-sm"
              alt={item.image}
              width={473}
              height={286}
              src={item.image}
            />
          </div>
          

          <div class="w-full">
            <h3 class="h4 font-bold leading-tight">{item.title}</h3>
            <p class="mt-4 text-base leading-relaxed" set:html={markdownify(item.content)}></p>
          </div>
          
        </div>
      ))}
    </div>
  </div>
</section>
